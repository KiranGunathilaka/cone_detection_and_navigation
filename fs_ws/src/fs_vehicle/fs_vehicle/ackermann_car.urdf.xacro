<?xml version="1.0"?>
<robot name="fs_car" xmlns:xacro="http://www.ros.org/wiki/xacro">
  <!-- Base -->
  <link name="base_link"/>
  <!-- Four wheels -->
  <link name="wheel_fl"/>
  <link name="wheel_fr"/>
  <link name="wheel_rl"/>
  <link name="wheel_rr"/>
  <!-- Steering joints (front) -->
  <joint name="steer_fl" type="revolute">
    <parent link="base_link"/>
    <child link="wheel_fl"/>
    <origin xyz="0.9 0.5 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6" effort="20" velocity="2.0"/>
  </joint>
  <joint name="steer_fr" type="revolute">
    <parent link="base_link"/>
    <child link="wheel_fr"/>
    <origin xyz="0.9 -0.5 0.15" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-0.6" upper="0.6" effort="20" velocity="2.0"/>
  </joint>
  <!-- Rolling joints (rear drive) -->
  <joint name="roll_rl" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rl"/>
    <origin xyz="-0.9 0.5 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  <joint name="roll_rr" type="continuous">
    <parent link="base_link"/>
    <child link="wheel_rr"/>
    <origin xyz="-0.9 -0.5 0.15" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
  </joint>
  <!-- Camera -->
  <link name="camera_link"/>
  <joint name="camera_mount" type="fixed">
    <parent link="base_link"/>
    <child link="camera_link"/>
    <origin xyz="1.0 0.0 0.5" rpy="0 0 0"/>
  </joint>
  <!-- Gazebo (gz) sensors/plugins via SDF snippets -->
  <gazebo>
    <plugin name="ros2_control" filename="libgazebo_ros2_control-system.so"/>
  </gazebo>
  <gazebo reference="camera_link">
    <sensor name="front_cam" type="camera">
      <always_on>true</always_on>
      <update_rate>30</update_rate>
      <camera>
        <horizontal_fov>1.05</horizontal_fov>
        <image>
          <width>1280</width>
          <height>720</height>
          <format>R8G8B8</format>
        </image>
      </camera>
      <topic>camera</topic>
    </sensor>
  </gazebo>
</robot>